<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#3f000000"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/play_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/play_image"/>
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3f000000">
        <ImageView
            android:id="@+id/collext"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/collext"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/play_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="18sp"
                android:text="This is the name of music"/>
            <TextView
                android:id="@+id/play_music_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Singer"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#3f000000">
        <ImageView
            android:id="@+id/play_pre"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/player_pre"/>
        <ImageView
            android:id="@+id/play_playorpause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/player_pause"/>
        <ImageView
            android:id="@+id/play_next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/player_next"/>
    </LinearLayout>


</LinearLayout>
