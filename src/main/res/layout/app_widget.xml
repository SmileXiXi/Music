<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#3f000000">
    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/player_icon2"
        android:layout_gravity="center_vertical" />
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/widget_player_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/widget_player_music_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/widget_player_btn_shang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/player_btn_shang"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:id="@+id/widget_player_btn_pauseorplay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/player_btn_ting"
        android:layout_gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/widget_player_btn_xia"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/player_btn_xia"
        android:layout_gravity="center_vertical"/>

</LinearLayout>