<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/bt_allmusic"
                android:layout_width="145dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#3f000000"
                android:src="@drawable/all_music_image"/>
            <TextView
                android:id="@+id/allmusic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:text="All  Music"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="italic"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/bt_mylove"
                android:layout_width="145dp"
                android:layout_height="120dp"
                android:src="@drawable/my_love_image"
                android:layout_marginRight="10dp"
                android:background="#3f000000" />
            <TextView
                android:id="@+id/mylove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:text="My Love"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="italic"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/bt_recentmusic"
                android:layout_width="145dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#3f000000"
                android:src="@drawable/recent_music_image"/>
            <TextView
                android:id="@+id/recentmusic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:text="Recent  Music"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="italic"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/bt_comment"
                android:layout_width="145dp"
                android:layout_height="120dp"
                android:src="@drawable/comment_image"
                android:layout_marginRight="10dp"
                android:background="#3f000000" />
            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:text="Comment"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>